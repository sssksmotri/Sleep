<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.third_2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/arrow_large_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:src="@drawable/arrow_large_left"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/Layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сколько часов ты хочешь спать?"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/arrow_small_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/arrow_small_left"
                    android:layout_centerVertical="true" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/arrow_small_left"
                    android:layout_toStartOf="@id/arrow_small_right"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/circle_5"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_6"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="6"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_7"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="7"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_8"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="8"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_9"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="9"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_10"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="10"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_11"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="11"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_12"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="12"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_13"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="13"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_14"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="14"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/circle_15"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/circle_background"
                            android:gravity="center"
                            android:text="15"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/arrow_small_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_small_right"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layouttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Во сколько вы просыпаетесь?"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:id="@+id/layoutweekdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/edittextweekdays"
                        android:layout_width="match_parent"
                        android:hint="В будни"
                        style="@style/CustomEditTextStyle"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"/>

                    <TimePicker
                        android:id="@+id/timePickerweekdays"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:timePickerMode="spinner"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutweekend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittextweekend"
                        android:layout_width="match_parent"
                        android:hint="В выходные"
                        style="@style/CustomEditTextStyle"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"/>

                    <TimePicker
                        android:id="@+id/timePickerweekend"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:timePickerMode="spinner"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutnotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Разрешить отправлять мне уведомления"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                    <Switch
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Разрешить использовать функции “Время сна” для отслеживания сна"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                    <Switch
                        android:id="@+id/switch_sleep_tracking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:text="Сохранить"
        style="@style/CustomLargeButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>
</RelativeLayout>